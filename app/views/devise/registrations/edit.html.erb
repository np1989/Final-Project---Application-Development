<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>
<form class = "form-inline">

    <div class="form-group">
      <%= f.label "First Name: " %>
      <%= f.label current_user.first_name, :class => "form_control"%>
      <p></p>
      <%= f.label "Last Name: " %>
      <%= f.label current_user.last_name , :class => "form_control"%>
    </div>

    <div class="form-group">
      <%= f.label "Country:" %>
      <%= f.label Country.find_country_by_alpha2(current_user.country_location), :class => "form_control"%>
      <p></p>
      <%= f.label "City:" %>
      <%= f.label current_user.city_location, :class => "form_control"%>
    </div>
    <p></p>
    <%= f.label "Description:" %>
    <text_area class = "form_control"><%= current_user.description %> </text_area>
  </div>

  <div class = "container">

    <%= f.label :picture %>
    <p></p>
    <img src="<%= current_user.picture %>" height = "150" width = "300">
    <p></p>
    <%= f.file_field :picture, :class => "form-control" %>
    <p></p>
  </div>

  <div class="container">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
    <p></p>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <p></p>
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "off", :class => "form_control" %>
    <p></p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form_control" %>
    <p></p>
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "off", :class => "form_control" %>
  </div>

<div class="container">
<div class="actions">
  <%= f.submit "Update" %>
</div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
</form>

<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Tour Guide #<%= @tour_guide.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Country location</dt>
              <dd><%= @tour_guide.country_location %></dd>

              <dt>User</dt>
              <dd><%= @tour_guide.user_id %></dd>

              <dt>Usertype</dt>
              <dd><%= @tour_guide.usertype %></dd>

              <dt>First name</dt>
              <dd><%= @tour_guide.first_name %></dd>

              <dt>Last name</dt>
              <dd><%= @tour_guide.last_name %></dd>

              <dt>City location</dt>
              <dd><%= @tour_guide.city_location %></dd>

              <dt>Picture</dt>
              <dd><%= @tour_guide.picture %></dd>

              <dt>Description</dt>
              <dd><%= @tour_guide.description %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/tour_guides" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/tour_guides/<%= @tour_guide.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_tour_guide/<%= @tour_guide.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->

<!-- Validation failure messages -->

<% if @tour_sight.errors.any? %>
  <% @tour_sight.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Tour Sight #<%= @tour_sight.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_tour_sight/<%= @tour_sight.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for tour_id -->
          <div class="form-group">
            <label for="tour_id" class="col-sm-2 control-label">
              Tour
            </label>
            <div class="col-sm-10">
              <input type="text" id="tour_id" name="tour_id" placeholder="Tour" class="form-control" value="<%= @tour_sight.tour_id %>">
            </div>
          </div>

          <!-- Label and input for sight_id -->
          <div class="form-group">
            <label for="sight_id" class="col-sm-2 control-label">
              Sight
            </label>
            <div class="col-sm-10">
              <input type="text" id="sight_id" name="sight_id" placeholder="Sight" class="form-control" value="<%= @tour_sight.sight_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Tour Sight
              </button>
              or
              <a href="/tour_sights/<%= @tour_sight.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->

<!-- Validation failure messages -->

<% if @sight.errors.any? %>
  <% @sight.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Sight</h3>
      </div>
      <div class="panel-body">
        <form action="/create_sight" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
            Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @sight.name %>">
            </div>
          </div>

          <!-- Label and input for country_location -->
          <div class="form-group">
            <label for="country_location" class="col-sm-2 control-label">
              Country location
            </label>
            <div class="col-sm-10">
              <input type="text" id="country_location" name="country_location" placeholder="Country" class="form-control" value="<%= @sight.country_location %>">
            </div>
          </div>

          <!-- Label and input for city_location -->
          <div class="form-group">
            <label for="city_location" class="col-sm-2 control-label">
              City location
            </label>
            <div class="col-sm-10">
              <input type="text" id="city_location" name="city_location" placeholder="City" class="form-control" value="<%= @sight.city_location %>">
            </div>
          </div>

    <!-- Description upload-->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Description:
            </label>
            <div class="col-sm-10">
              <textarea id="description" rows = "10" name="description" placeholder="Description..." class="form-control" value="<%= @sight.description %>"> </textarea>
            </div>
          </div>

          <!-- Picture upload -->
          <div class="form-group">
            <label for="picture" class="col-sm-2 control-label">
              Picture
            </label>
            <div class="col-sm-10">
            <input type="file" id="picture" name="picture" class="form-control">
            </div>
          </div>

          <!-- Label and input for tour_id -->
          <div class="form-group">
            <label for="tour_id" class="col-sm-2 control-label">
              Tour
            </label>
            <div class="col-sm-10">
              <%= select_tag(:tour_id, options_from_collection_for_select(Tour.all, :id, :tour_name)) %>
            </div>
          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Sight
              </button>
              or
              <a href="/sights">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
